<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="email_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">#484848</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="email_edittext_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:elevation">50dp</item>
        <item name="android:layout_marginTop">35sp</item>
        <item name="android:layout_marginStart">20sp</item>
        <item name="android:layout_marginEnd">20sp</item>
        <item name="android:background">@drawable/background_corners_white_gradient</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="top_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#484848</item>
    </style>

    <style name="categories_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#484848</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="view_all_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">#FFD279</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recycle_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/teal_200</item>
    </style>

</resources>